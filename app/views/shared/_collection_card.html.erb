<a href="<%= list_path(list) %>"
 class="card collection-card mb-3">
  <div class="collection-card-images">
    <% list.titles.each do |title| %>
      <% if list.titles.count == 1 %>
        <img src="<%= title.poster_url %>" alt="Poster of <%= title.name %>" class="collection-card-img collection-card-img-single">
      <% else %>
        <img src="<%= title.poster_url %>" alt="Poster of <%= title.name %>" class="collection-card-img">
      <% end %>
    <% end %>
  </div>
  <div class="card-body collection-card-body">
    <img class="avatar avatar-collection-card" src="
        <% if list.user.profile_picture_url == nil %>
          https://t4.ftcdn.net/jpg/02/29/75/83/360_F_229758328_7x8jwCwjtBMmC6rgFzLFhZoEpLobB6L8.jpg

        <% else %>
          <%= list.user.profile_picture_url %>
        <%end%>
        " alt="
        <% if list.user.username == nil%>
          Your Avatar
        <% else %>
          <%= list.user.username %>'s Avatar<% end %>"
        class="avatar-nav">
    <div class="collection-card-main-text">
      <h5 class="card-title collection-card-title"><%= list.name  %></h5>
      <p class="card-subtitle collection-card-subtitle"><%= list.user.username %></p>
    </div>
    <div class="card-text collection-card-small-text">
      <p><%= list.titles.count %></p>
      <%# <div>
        <p>Icon 1</p>
        <p>Icon 2</p>
      </div> %>
    </div>
  </div>
</a>
