<!-- app/views/lists/show.html.erb -->

<h1><%= @list.name %></h1>

<p><%= @list.description %></p>
<p>Status: <%= @list.status %></p>

<% if @list_items.any? %>
  <ul>
      <% @list_items.each do |list_item| %>
    <li>
        <%= list_item.title.name %>
    </li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
